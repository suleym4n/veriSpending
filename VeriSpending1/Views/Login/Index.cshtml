@model VeriSpending1.Models.user
@{
    ViewBag.Title="Home";
}



<div class="container">
<h2>Giriş Formu</h2>

@ViewBag.Mesaj
@using (Html.BeginForm("Index", "Login", FormMethod.Post ))
{
<div class="form-group">
  <strong>Mail:</strong>
    @Html.TextBox("mail", null, new { @class = "form-control" })
</div>
    
<div class="form-group">
    <strong>Şifre:</strong>
    @Html.TextBox("password", null, new { @class = "form-control" })
</div>  
    <input type="submit" class=" btn btn-primary" value="Giriş Yap" />
}
</div>
