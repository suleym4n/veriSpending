@model IEnumerable<VeriSpending1.Models.spending>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center">Harcamalar</h2>

<p>
    @Html.ActionLink("Masraf Ekle", "Spending")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.spendingTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.spendingDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.spendingDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.spendingAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.approval)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.spendingTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.spendingDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.spendingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.spendingAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.user.id)
            </td>
            <td>
                @Html.DisplayFor(model => item.approval)

            </td>
            
        </tr>
    }

</table>
